<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/incoming"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_year"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_month"
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one_year"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_bottom"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_month"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_bottom"
            android:textSize="14sp"
            />
    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/color_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/all_incoming1"
        android:textSize="10sp"
        />
    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/color_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_incoming"
        android:textSize="10sp"
        />
</LinearLayout>

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/mChart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
      />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yingkui"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_year1"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_month1"
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/one_year"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_bottom"
            android:textSize="14sp"
            />
        <TextView

            android:id="@+id/tv_month1"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month"
            android:gravity="center"
            android:drawableRight="@mipmap/arrow_bottom"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_incoming1"
            android:textSize="10sp"
            />
        <TextView
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/month_incoming"
            android:textSize="10sp"
            />
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_width="match_parent"
        android:layout_height="400dp"

        />

</LinearLayout>