<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_common"
        android:orientation="vertical">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <RelativeLayout
                android:id="@+id/rel_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_customer"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_customer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/person_center"
                    android:textColor="@color/color_white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="wrap_content"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="15dp"
                    android:src="@mipmap/ic_set" />

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="15dp"
            app:cardCornerRadius="5dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B25DFE"
                android:padding="17dp">

                <ImageView
                    android:id="@+id/iv_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_user"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="AP232423"
                    android:textColor="@color/color_white"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="跟随者"
                    android:textColor="@color/color_white"
                    android:textSize="10sp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
                    app:layout_constraintTop_toBottomOf="@+id/tv_role">

                    <TextView
                        android:id="@+id/fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fans"
                        android:textColor="#90ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="000"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/guanzhu"
                        android:textColor="#90ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_guanzhu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="000"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="@string/renqi"
                        android:textColor="#90ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_renqi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="000"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ll">

                    <TextView
                        android:id="@+id/tv_moni"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/monigensui"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="30dp"
                        android:background="@color/color_white"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_caopan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/monicaopan"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="30dp"
                        android:background="@color/color_white"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_wallet"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/my_walet"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@color/color_white" />

                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/my_account"
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                </LinearLayout>


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="50dp"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:id="@+id/coin_house_order"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_deal"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/jiaoyisuo_order"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/invite_friend"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_frid"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/invite_friend"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />


                <RelativeLayout
                    android:id="@+id/mine_trader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:drawableLeft="@mipmap/mine_traders"
                        android:drawableRight="@mipmap/ic_right"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/mine_trader"
                        android:textColor="@color/color_home"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_trader_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:text="未申请"
                        android:textColor="@color/dilaog_btn_color"
                        android:textSize="14sp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/mine_subsiber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_subs"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/subsciber"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/mine_collector"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_collect"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/mine_collect"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/mine_jiaoyisuo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_exchange"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/mine_jiaoyisuo"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mine_message"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:drawableLeft="@mipmap/mine_news"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/mine_message"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mine_fade"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="20dp"
                    android:drawableLeft="@mipmap/mine_opinion"
                    android:drawableRight="@mipmap/ic_right"
                    android:drawablePadding="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/mine_fade"
                    android:textColor="@color/color_home"
                    android:textSize="14sp" />

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cl_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scan_color"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="205dp"
            android:background="@drawable/mine_guide_regist_bg"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/monigensui"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_step"
            android:layout_marginStart="90dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/sming_01"

            />


    </RelativeLayout>


</RelativeLayout>