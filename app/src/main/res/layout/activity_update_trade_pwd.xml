<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_common"
    android:paddingTop="25dp"
    tools:context="com.hazz.aipick.ui.activity.UpdateTradePwdActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/et_trade_pwd_org"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:hint="@string/please_input_old_trade_pwd"
        android:imeOptions="actionNext"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/text_color_edit_hint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@+id/et_trade_pwd_org" />

    <EditText
        android:id="@+id/et_trade_pwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/please_input_new_trade_pwd"
        android:imeOptions="actionNext"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/text_color_edit_hint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/et_trade_pwd_org" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@+id/et_trade_pwd" />

    <EditText
        android:id="@+id/et_trade_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@null"
        android:hint="@string/please_input_pwd_again"
        android:imeOptions="actionDone"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingLeft="30dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/text_color_edit_hint"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/et_trade_pwd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@+id/et_trade_pwd_again" />

    <Button
        android:id="@+id/bt_confirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/btn_login"
        android:text="@string/confirm"
        android:textColor="@color/color_white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>