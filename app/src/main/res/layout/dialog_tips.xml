<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_bg_top"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="15dp"
                android:textSize="15sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:text="@string/tips"
                android:background="@drawable/dialog_bg_top"
                android:textColor="@color/commonTextColor"
                />
            <TextView
                android:id="@+id/mTvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:textSize="13sp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/commonTextColor"
                />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/part_line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="100"
            android:background="@drawable/dialog_bg_bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/home_text"
                android:background="@drawable/dialog_bg" />

            <View
                android:id="@+id/line_part"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/part_line_color" />

            <Button
                android:id="@+id/btn_confirm"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:textAllCaps="false"
                android:text="@string/confirm"
                android:textColor="@color/dilaog_btn_color"
                android:background="@drawable/dialog_bg" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>